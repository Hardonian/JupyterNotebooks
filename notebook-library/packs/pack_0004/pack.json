{
  "id": "pack_0004",
  "slug": "competitor-table-builder",
  "title": "Competitor Table Builder",
  "version": "1.0.0",
  "tool": "jupyter",
  "key_type": "notebook",
  "category": "consulting",
  "difficulty": "intermediate",
  "runtime_minutes": 15,
  "description": "Build competitor comparison tables with optional web scraping (offline fallback)",
  "tags": [
    "competitor-analysis",
    "research",
    "web-scraping"
  ],
  "inputs": [
    {
      "name": "competitor_data",
      "type": "json",
      "required": false,
      "path": "data/competitors.json",
      "notes": "Competitor data (will use sample if not provided)"
    }
  ],
  "outputs": [
    {
      "name": "competitor_table_csv",
      "type": "csv",
      "path": "outputs/competitor_table.csv",
      "notes": "Comparison table in CSV format"
    },
    {
      "name": "competitor_table_json",
      "type": "json",
      "path": "outputs/competitor_table.json",
      "notes": "Comparison table in JSON format"
    }
  ],
  "entrypoint": "main.ipynb",
  "python": {
    "min": "3.10",
    "tested": [
      "3.11"
    ]
  },
  "install": {
    "tool": "pip",
    "command": "pip install -r requirements.txt"
  },
  "run": {
    "command": "jupyter nbconvert --to notebook --execute main.ipynb --output executed.ipynb"
  },
  "license": {
    "spdx": "GPL-3.0-only",
    "file": "LICENSE.txt"
  },
  "changelog": "CHANGELOG.md",
  "assets": {
    "cover": "assets/cover.png",
    "flow": "assets/flow.svg",
    "preview_html": "assets/preview.html"
  }
}